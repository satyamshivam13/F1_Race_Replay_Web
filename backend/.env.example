# Application Settings
APP_NAME="F1 Race Replay API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/f1replay

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000","https://your-frontend.vercel.app"]

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# FastF1 Configuration
FASTF1_CACHE_DIR=/tmp/fastf1_cache

# Replay Configuration
REPLAY_FPS=30
MAX_CONCURRENT_REPLAYS=100

# Sentry Error Tracking (Optional - leave empty to disable)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Production Settings (uncomment for production)
# DATABASE_URL=postgresql+asyncpg://user:password@your-db-host:5432/f1replay
# REDIS_URL=redis://your-redis-host:6379/0
